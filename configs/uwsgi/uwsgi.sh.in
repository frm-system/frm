#!/bin/bash
uwsgi=/usr/bin/uwsgi

command=$1

function start {
echo "Starting..."
$uwsgi py_bcrypt --ini ${uwsgiconfig:configfile}
}

function stop {
echo "Stoping..."
$uwsgi --stop ${uwsgiconfig:pidfile}
}

function reload {
echo "Reloading..."
$uwsgi --reload ${uwsgiconfig:pidfile}
}


case $command in
start)
  start
  ;;
stop)
  stop
  ;;
reload)
  reload
  ;;
restart)
  stop
  sleep 2
  start
  ;;
*)
  echo "Usage: $0 {start|stop|restart|reload}"
  exit 1
  ;;
esac
